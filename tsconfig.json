{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "files": [
    "./src/app.ts",
    "./src/background.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
